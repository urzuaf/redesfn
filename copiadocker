version: '3'

services:
  web:
    image: nginx:latest
    container_name: convertidor-web
    volumes:
      - ./html:/usr/share/nginx/html
    ports:
      - "3000:80"
    networks:
      - webnet
  rates:
    build:
      context: ./rates_service # Ruta al directorio del primer servicio
    ports:
      - "8080:8080"
    networks:
      - webnet
  convert:
    build:
      context: ./convert_service # Ruta al directorio del segundo servicio
    ports:
      - "9090:9090"
    networks:
      - webnet
    environment:
      - RATES_SERVICE_URL=http://rates:8080 # URL para conectarse al servicio de tasas
  proxy:
    image: jc21/nginx-proxy-manager:latest
    restart: always
    ports:
      - "80:80"       # HTTP
      - "443:443"     # HTTPS
      - "81:81"       # Panel de administraci√≥n de Nginx Proxy Manager
    volumes:
      - proxy-data:/data
      - proxy-letsencrypt:/etc/letsencrypt
    networks:
      - webnet

networks:
  webnet:
    driver: bridge

volumes:
  proxy-data:
  proxy-letsencrypt:
